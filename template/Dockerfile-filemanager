FROM alpine:latest 

RUN apk update \
  && apk upgrade \
  && apk add \
    nginx \
    php \
    php-fpm \
    php-mysqli \
    php-json \
    php-openssl \
    php-curl \
    php-zlib \
    php-phar \
    php-mbstring \
    php-session \
    php-iconv \
    php-dom \
    php-ctype \
    php-fileinfo \
    php-tokenizer \
    wget \
    unzip \
    nano \
    curl \
  && mkdir -p /var/www/html \
  && mkdir -p /run/nginx

COPY ./assets/tinyfilemanager.php /var/www/html/index.php
COPY ./assets/tinyfilemanager-translation.json /var/www/html/translation.json

ARG FILEMANAGER_USERNAME
ARG FILEMANAGER_PASSWORD
ARG FILEMANAGER_PATH

RUN echo "FILEMANAGER_USERNAME=${FILEMANAGER_USERNAME}" >> /var/www/html/.env \
  && echo "FILEMANAGER_PASSWORD=${FILEMANAGER_PASSWORD}" >> /var/www/html/.env \
  && echo "FILEMANAGER_PATH=${FILEMANAGER_PATH}" >> /var/www/html/.env \
  && chown -R nginx:nginx /var/www/html/.env /var/www/html/index.php /var/www/html/translation.json

EXPOSE 80

CMD ["sh", "-c", "php-fpm83 && nginx -g 'daemon off;'"]
