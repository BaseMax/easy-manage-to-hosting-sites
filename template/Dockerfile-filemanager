FROM alpine:latest 

RUN apk update --no-cache && \
    apk upgrade --no-cache && \
    apk add --no-cache \
    nginx \
    php \
    php-fpm \
    php-mysqli \
    php-json \
    php-openssl \
    php-curl \
    php-zlib \
    php-phar \
    php-mbstring \
    php-session \
    php-iconv \
    php-dom \
    php-ctype \
    php-fileinfo \
    php-gd \
    php-pdo \
    php-pdo_mysql \
    php-intl \
    php-soap \
    php-opcache \
    php-zip \
    php-tokenizer \
    icu-data-full \
    php-pecl-xdebug \
    wget \
    unzip \
    zip \
    libzip-dev \
    nano \
    pcre2 \
    pcre2-dev \
    autoconf \
    gcc \
    g++ \
    make \
    curl && \
    mkdir -p /var/www/html && \
    mkdir -p /run/nginx

COPY ./config/set_permissions.sh /usr/local/bin/set_permissions.sh
RUN chmod +x /usr/local/bin/set_permissions.sh
RUN sh -c /usr/local/bin/set_permissions.sh

WORKDIR /var/www
EXPOSE 80

CMD ["sh", "-c", "php-fpm83 && nginx -g 'daemon off;'"]
